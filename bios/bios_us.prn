fb2f 3a 03 00		    LD A,(iobyte) 
fb32 e6 03		    AND 0x3 
fb34 2e 39		    LD L,ROM_SIOOUT 
fb36 ca ac fb		    JP Z,ROM_JUMP 
fb39 2e 45		    LD L,ROM_VIDOUT 
fb3b c3 ac fb		    JP ROM_JUMP 
