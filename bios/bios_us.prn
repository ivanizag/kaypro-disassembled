fb52 2e 3f		    LD L,ROM_LIST 
fb54 fe 80		    CP 0x80 
fb56 ca ac fb		    JP Z,ROM_JUMP 
fb59 2e 45		    LD L,ROM_VIDOUT 
fb5b fe 40		    CP 0x40 
fb5d ca ac fb		    JP Z,ROM_JUMP 
fb60 2e 39		    LD L,ROM_SIOOUT 
fb62 c3 ac fb		    JP ROM_JUMP 
